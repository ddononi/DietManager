<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f3f7"
    android:fadingEdge="none"
    android:minWidth="280dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f7f3f7"
        android:orientation="vertical" >
	
		<LinearLayout
			android:layout_height="60px"
			android:layout_width="fill_parent"
			android:paddingLeft="15px"
			android:paddingRight="15px">
			<TextView
				android:id="@+id/txt_title"
				android:layout_height="fill_parent"
				android:layout_width="0px"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:textColor="#000"
				android:textSize="20sp"
				android:text="회원가입" />

		</LinearLayout>

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#5a9af7"
            android:orientation="vertical"
            android:padding="1dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="이름 : "
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                style="@style/input"
                android:id="@+id/input_name"
                android:layout_marginRight="15dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#eeeeee"
                android:hint="이름을 입력하세요." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sex_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="성별 : "
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:prompt="@string/sex_title"
                android:id="@+id/sex_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"                
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/age_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="나이 : "
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
 				style="@style/input"                
                android:id="@+id/age_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:textColorHint="#eeeeee"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:hint="나이를 입력하세요." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="신장 : "
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                style="@style/input"
                android:id="@+id/height_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:textColorHint="#eeeeee"
                android:hint="신장을  입력하세요." 
                android:maxLength="3"
                android:inputType="numberSigned" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="체중 : "
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                style="@style/input"
                android:id="@+id/weight_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:textColorHint="#eeeeee"
				android:inputType="numberSigned"
                android:hint="체중을 입력하세요" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#f7f3f7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/active_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="평소활동량"
                android:textColor="#5a9af7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:prompt="@string/active_title"
                android:id="@+id/active_spinner"
                android:layout_width="fill_parent"
                android:layout_marginRight="15dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
            <Button
        		android:background="@drawable/btn"
                android:layout_marginTop="20dp"
                android:id="@+id/join_btn"
                android:text="회원가입"
                android:textColor="#fff"
                android:layout_width="fill_parent"
                android:layout_height="40dp"        
                />
    </LinearLayout>

</ScrollView>