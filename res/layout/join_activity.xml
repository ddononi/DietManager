<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:fadingEdge="none"
    android:minWidth="280dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/my_info_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="이름 : "
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_name"
                style="@style/input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:hint="이름을 입력하세요."
                android:textColorHint="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sex_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="성별 : "
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sex_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
                android:entries="@array/sex_chocie"
                android:prompt="@string/sex_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/age_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="나이 : "
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/age_input"
                style="@style/input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:hint="나이를 입력하세요."
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColorHint="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/height_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dip"
                android:background="#f7f7f7"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="신장 : "
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/height_input"
                style="@style/input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:hint="신장을  입력하세요."
                android:inputType="numberSigned"
                android:maxLength="3"
                android:textColorHint="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="체중 : "
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weight_input"
                style="@style/input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:hint="체중을 입력하세요"
                android:inputType="numberSigned"
                android:textColorHint="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/active_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="평소활동량"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/active_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:prompt="@string/active_title" />
        </LinearLayout>

        <Button
            android:id="@+id/join_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:text="회원가입"
            android:textColor="#fff" />
    </LinearLayout>

</ScrollView>